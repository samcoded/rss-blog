

<!DOCTYPE html>
<html lang="en">
	<head>
		  <title> 
     RSS BLOG - PAGE <%=current%>
    </title>
		<!-- head -->
		<%- include('./head'); %>
	</head>
	<body>
		<!-- nav -->
		<%- include('./header'); %>
		<!-- main -->
		<div
			class="container container max-w-xl m-auto flex flex-wrap flex-col md:flex-row items-center justify-start"
		>
	
			<div class="w-full">
				<h1 class="text-2xl font-bold text-center">
					<% let last = current * perPage; if (last >total) last=total; %>
					Latest Posts - Page <%=current%> of <%=last%>
				</h1>
			</div>
			<% posts.forEach( function(post){ %>
			<div class="w-full 2xl:w-1/2 p-3">
				<a href="/post/<%= post.id %>" class="href"
					><div
						class="flex flex-col 2xl:flex-row rounded overflow-hidden h-auto 2xl:h-32 border shadow shadow-2xl hover:bg-gray-200"
					>
						<div
							class="bg-white rounded-b 2xl:rounded-b-none 2xl:rounded-r p-4 flex flex-col justify-between leading-normal hover:bg-gray-200"
						>
							<divs
								class="text-black font-bold text-l mb-2 leading-tight"
							>
							
						
							<span class="<% if (post.read) {%>text-gray-600<% } else { %>text-black<%
							} %>">	<%= post.title %></span>
							</divs>
							<p class="text-grey-darker text-base">
								<% const content=post.contentsnippet.substring(0, preview_length); %>
								<%= content %> ...
								<p><%=moment(post.date).fromNow()%> - <%= post.feed.title %></p>
							</p>
							
						</div>
					</div>
				</a>
			</div>
			<% }); %>
		</div>

		  <div class="container">
      
            <% if (pages > 0) { %>


				<div
			class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6"
		>	<% let previous = current - 1;
		if (previous<1) { previous = 1 }
					let next = Number(current) + 1; %> 
			<div class="flex-1 flex justify-between sm:hidden">
				<a
					href="/?page=<%= previous %>" 
					class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
				>
					Previous
				</a>
				<span class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50">Page <%=current%></span>
				<a
					href="/?page=<%= next %>"
					class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 <% if(next>pages){ %>hidden<% } %>"
				 >
					Next
				</a>
			</div>
<div
				class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between"
			>
				<div>
					<p class="text-sm text-gray-700">
						Showing
						<span class="font-medium"><%=  (current * perPage) - perPage + 1 %></span>
						to
						<span class="font-medium"> <%=last%></span>
						of
						<span class="font-medium"><%= total %></span>
						results
					</p>
				</div>
				<div>
					<nav
						class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px"
						aria-label="Pagination"
					>
				
						<a
							href="/?page=<%= previous %>"
							class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 "
						>
							<span class="sr-only">Previous</span>
							<!-- Heroicon name: solid/chevron-left -->
							<svg
								class="h-5 w-5"
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 20 20"
								fill="currentColor"
								aria-hidden="true"
							>
								<path
									fill-rule="evenodd"
									d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
									clip-rule="evenodd"
								/>
							</svg>
						</a>
						<!-- Current: "z-10 bg-indigo-50 border-indigo-500 text-indigo-600", Default: "bg-white border-gray-300 text-gray-500 hover:bg-gray-50" -->
						  <% if (current == 1) { %>
                        <a
							
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						First
						</a>
                    <% } else { %>
						 <a
							href="/?page=1"
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						First
						</a>
                       
                    <% } %>


                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                      <a
							
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						...
						</a>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                           
								<a
							href="/?page=<%= i %>" aria-current="page"
							class="z-10 bg-indigo-50 border-indigo-500 text-indigo-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium active"
						>
							<%= i %>
						</a>
                        <% } else { %>
                           
							<a
							href="/?page=<%= i %>"
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium"
						>
							<%= i %>
						</a>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                           <a
							
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						...
						</a>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                         <a
							
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						Last
						</a>
                    <% } else { %>
						 <a href="/?page=<%= pages %>"
							
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						Last
						</a>
                     
                    <% } %>
						<a
							href="/?page=<%= next %>"
							class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 <% if(next>pages){ %>hidden<% } %>"
						>
							<span class="sr-only">Next</span>
							<!-- Heroicon name: solid/chevron-right -->
							<svg
								class="h-5 w-5"
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 20 20"
								fill="currentColor"
								aria-hidden="true"
							>
								<path
									fill-rule="evenodd"
									d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
									clip-rule="evenodd"
								/>
							</svg>
						</a>
					</nav>
				</div>
			</div>
			</div>
               
            <% } %>
    </div>
		<footer class="bg-gray-200 text-center text-gray-700 py-4 mt-5">
			<!-- foot -->
			<%- include('./footer'); %>
		</footer>
	</body>
</html>

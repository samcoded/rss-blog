<!DOCTYPE html>
<html lang="en">
	<head>
		<title>
		FOLLOWING FEEDS
		</title>
		<!-- head -->
		<%- include('./head'); %>
	</head>
	<body>
		<!-- nav -->
		<%- include('./header'); %>
		<!-- main -->
		<div class="container mx-auto px-4">
			<div class="flex flex-wrap justify-center">
				<div class="w-full max-w-sm">
					<div
						class="flex flex-col break-words bg-white border border-2 rounded shadow-md"
					>
						<div
							class="font-semibold bg-gray-200 text-gray-700 py-3 px-6 mb-0"
						>
							<h1 class="text-xl font-bold mb-2">
								<i class="fas fa-rss-square"></i>
								<span class="ml-2">Manage Feeds</span>
							</h1>
							<p>
							<a
								href="/feeds/add"
								
								class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
							>
								Add New Feed</a
							></p>
							
						</div>
						<form action="/feeds/config" method="post" class="mt-4">
							<div class="flex flex-wrap mb-6">
								<div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
									<label
										class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
										for="grid-first-name"
									>
										Pull Interval (Secs)
									</label>
									<input
										class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
										id="grid-first-name"
										type="number" value="<%-pull_interval %>"
										name="pull_interval"
										required
									/>
								</div>
								<div class="w-full md:w-1/2 px-3">
									<label
										class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2"
										for="grid-last-name"
									>
										Preview Limit
									</label>
									<input name="preview_length"
										class="appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500"
										id="grid-last-name"
										type="number"
										value="<%=preview_length%>"
										required
									/>
								</div>
								<div class="w-full px-3">
									<button
										class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
										
										type="submit"
									>
										Save
									</button>
							</div>
						</form>
						
						<div class="flex-1 bg-white">
							<ul class="w-full text-sm">
								<% feeds.forEach(function(feed) { %>
								<li class="border-b border-gray-200">
								
									<a
										href="<%= feed.link %>"
										class="block hover:bg-gray-50 focus:outline-none focus:bg-gray-50 transition duration-150 ease-in-out"
									>
										<div
											class="flex items-center px-4 py-4"
										>
											<div class="ml-3">
												<p
													class="text-gray-900 whitespace-no-wrap"
												>
													<span class="font-medium">
														<a
															href="<%= feed.link %>"
														>
												<div class="font-bold">	<%= feed.title %></div>
														</a>
													</span>
												</p>
												<p
													class="text-gray-500 whitespace-no-wrap"
												>
													<span class="font-medium">
														<a
															href="<%= feed.link %>"
														>
															<p>
																<%=//feed.description
																%>
															</p>
														</a>
													</span>
														<p><%= feed.rssurl %></p>
												</p>
											</div>
											
										</div>
									</a>
						
								<div class="flex flex-column justify-around center mb-2">	
									<form
												action="/feeds/<%= feed._id %>"
												method="get"
											>

											<button

												type="submit"
												class="-ml-px relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-50 active:text-gray-800 transition ease-in-out duration-150"
											>
												<i class="fas fa-edit"></i>
											</button>	

												
											</form>
											<form
												action="/feeds/<%= feed._id %>"
												method="post"
											>


												<input
													type="hidden"
													name="_method"
													value="delete"
												/>
												

												<button
													type="submit"
													class="-ml-px relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-50 active:text-gray-800 transition ease-in-out duration-150"
												>
													<i class="fas fa-trash-alt"></i>
												</button>
											</form></div>
								</li>

								<% }) %>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>

		  <div class="container">
      
            <% if (pages > 0) { %>


				<div
			class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6"
		>	<% let previous = current - 1;
		if (previous<1) { previous = 1 }
					let next = Number(current) + 1; %> 
			<div class="flex-1 flex justify-between sm:hidden">
				<a
					href="/?page=<%= previous %>" 
					class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
				>
					Previous
				</a>
				<a
					href="/?page=<%= next %>"
					class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 <% if(next>pages){ %>hidden<% } %>"
				 >
					Next
				</a>
			</div>
<div
				class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between"
			>
				<div>
					<p class="text-sm text-gray-700">
						Showing
						<span class="font-medium"><%=  (current * perPage) - perPage + 1 %></span>
						to
						<span class="font-medium"><% let last = current * perPage; if (last >total) last=total; %> <%=last%></span>
						of
						<span class="font-medium"><%= total %></span>
						results
					</p>
				</div>
				<div>
					<nav
						class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px"
						aria-label="Pagination"
					>
				
						<a
							href="/?page=<%= previous %>"
							class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 "
						>
							<span class="sr-only">Previous</span>
							<!-- Heroicon name: solid/chevron-left -->
							<svg
								class="h-5 w-5"
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 20 20"
								fill="currentColor"
								aria-hidden="true"
							>
								<path
									fill-rule="evenodd"
									d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z"
									clip-rule="evenodd"
								/>
							</svg>
						</a>
						<!-- Current: "z-10 bg-indigo-50 border-indigo-500 text-indigo-600", Default: "bg-white border-gray-300 text-gray-500 hover:bg-gray-50" -->
						  <% if (current == 1) { %>
                        <a
							
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						First
						</a>
                    <% } else { %>
						 <a
							href="/?page=1"
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						First
						</a>
                       
                    <% } %>


                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                      <a
							
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						...
						</a>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                           
								<a
							href="/?page=<%= i %>" aria-current="page"
							class="z-10 bg-indigo-50 border-indigo-500 text-indigo-600 relative inline-flex items-center px-4 py-2 border text-sm font-medium active"
						>
							<%= i %>
						</a>
                        <% } else { %>
                           
							<a
							href="/?page=<%= i %>"
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium"
						>
							<%= i %>
						</a>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                           <a
							
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						...
						</a>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                         <a
							
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						Last
						</a>
                    <% } else { %>
						 <a href="/?page=<%= pages %>"
							
							class="bg-white border-gray-300 text-gray-500 hover:bg-gray-50 relative inline-flex items-center px-4 py-2 border text-sm font-medium disabled"
						>
						Last
						</a>
                     
                    <% } %>
						<a
							href="/?page=<%= next %>"
							class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50 <% if(next>pages){ %>hidden<% } %>"
						>
							<span class="sr-only">Next</span>
							<!-- Heroicon name: solid/chevron-right -->
							<svg
								class="h-5 w-5"
								xmlns="http://www.w3.org/2000/svg"
								viewBox="0 0 20 20"
								fill="currentColor"
								aria-hidden="true"
							>
								<path
									fill-rule="evenodd"
									d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z"
									clip-rule="evenodd"
								/>
							</svg>
						</a>
					</nav>
				</div>
			</div>
			</div>
               
            <% } %>
    </div>
		<footer class="bg-gray-200 text-center text-gray-700 py-4 mt-5">
			<!-- foot -->
			<%- include('./footer'); %>
		</footer>
	</body>
</html>
